<div class="col-lg-12">
	<%= flash[:notice] %>
	<div class="card rounded-0 mt-5 mb-5">
		<div class="card-body">
			<h2 class="text-center">Listing Employees</h2>
		</div>
	</div>
	<%= link_to "Create New Employee", new_employee_path, class: "btn btn-primary btn-lg mb-4" %>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Address</th>
				<th>Actions</th>
			</tr>
		</thead>
		<body>
			<% @employees.each do |employee| %>
			<tr>
				<td><%= employee.name %></td>
				<td><%= employee.personal_email %></td>
				<td><%= employee.full_address %></td>
				<td>
					<div class="dropdown">
					  <a class="btn btn-primary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
					    Actions
					  </a>

					  <ul class="dropdown-menu">
					    <li><%= link_to "View", employee_path(employee), class: "dropdown-item" %></li>
					    <li><%= link_to "Edit", edit_employee_path(employee), class: "dropdown-item" %></li>
					    <li><%= link_to "delete", employee_path(employee), class: "dropdown-item", mehod: :delete, data: { confirm: 'Are you sure to delete this employee?'} %></li>
					  </ul>
					</div>
					
					
					
				</td>
			</tr>
			<% end %>
		</body>
	</table>
</div>